<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

    <PropertyGroup>
        <OurUmbracoMaintenanceModeV9ContentFilesPath>$(MSBuildThisFileDirectory)..\App_Plugins\Our.Umbraco.MaintenanceModeV9\**\*.*</OurUmbracoMaintenanceModeV9ContentFilesPath>
    </PropertyGroup>

    <Target Name="CopyOurUmbracoMaintenanceModeV9Assets" BeforeTargets="Build">
        <ItemGroup>
            <OurUmbracoMaintenanceModeV9ContentFiles Include="$(OurUmbracoMaintenanceModeV9ContentFilesPath)" />
        </ItemGroup>
        <Message Text="Copying Our.Umbraco.MaintenanceModeV9 files: $(OurUmbracoMaintenanceModeV9ContentFilesPath) - #@(OurUmbracoMaintenanceModeV9ContentFiles->Count()) files"  Importance="high" />
        <Copy
            SourceFiles="@(OurUmbracoMaintenanceModeV9ContentFiles)"
            DestinationFiles="@(OurUmbracoMaintenanceModeV9ContentFiles->'$(MSBuildProjectDirectory)\App_Plugins\Our.Umbraco.MaintenanceModeV9\%(RecursiveDir)%(Filename)%(Extension)')"
            SkipUnchangedFiles="true" />

    </Target>

    <Target Name="ClearOurUmbracoMaintenanceModeV9Assets" BeforeTargets="Clean">
        <ItemGroup>
            <OurUmbracoMaintenanceModeV9Dir Include="$(MSBuildProjectDirectory)\App_Plugins\Our.Umbraco.MaintenanceModeV9\" />
        </ItemGroup>
        <Message Text="Clear old Our.Umbraco.MaintenanceModeV9 data"  Importance="high" />
        <RemoveDir Directories="@(OurUmbracoMaintenanceModeV9Dir)"  />
    </Target>

</Project>
